<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im_afternoon"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
	>

   
       
       
	<TextView
        android:id="@+id/lotroperiod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff9900"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
    	android:layout_centerVertical="true"
    	/>
	
	
	<TextView 
	    android:id = "@+id/timebeforenext"
	   	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:textColor="#FFCC00"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/lotroperiod"
	    android:layout_marginTop="15sp"
	    android:textSize="12sp"
	    />
       
   
   
    <TextView 
        android:id = "@+id/before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/before"
        android:textColor="#FFCC00"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/timebeforenext"
        android:textSize="12sp"
        />
	
    
    
    
    <TextView 
        android:id = "@+id/nextperiod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFCC00"
        android:textSize="12sp"
       	android:layout_centerHorizontal="true"
		android:layout_below="@id/before"
        />

    
    
    
</RelativeLayout>
